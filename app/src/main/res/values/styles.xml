<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="editTextWidth">400sp</dimen>
    <dimen name="countingEditTextWidth">55dp</dimen>

    <dimen name="H0">28sp</dimen>
    <dimen name="H1">24sp</dimen>
    <dimen name="H2">22sp</dimen>
    <dimen name="H3">20sp</dimen>
    <dimen name="H4">18sp</dimen>
    <dimen name="H5">16sp</dimen>
    <dimen name="H6">14sp</dimen>

                <!--Onboarding Screen Text Style-->
    <!--Onboarding Screen Heading Text Style-->
    <style name="OnboardingHeadingTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">25dp</item>
    </style>
    <!--Onboarding Screen Sub Heading Text Style-->
    <style name="OnboardingSubHeadingTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/H3</item>
    </style>

            <!-- OnBoarding Text Input Layout Theme-->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/subtitle</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="ClickableTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!--Box Stroke-->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/subtitle</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
        <!--End Icon-->
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/svg_arrow_down</item>
        <item name="endIconTint">@color/black</item>
        <!--Radius-->
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

                                    <!--ShapeableImageView-->
    <style name="RoundedCornerImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SquareCornerImage">
        <item name="cornerSize">5%</item>
    </style>

    <style name="SquareCornerImageM">
        <item name="cornerSize">10%</item>
    </style>

    <style name="SquareCornerImageForCards">
        <item name="cornerSize">15%</item>
    </style>

</resources>