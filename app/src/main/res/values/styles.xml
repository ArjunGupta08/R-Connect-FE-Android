<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="editTextWidth">400sp</dimen>
    <dimen name="countingEditTextWidth">55dp</dimen>

    <dimen name="H0">26sp</dimen>
    <dimen name="H1">22sp</dimen>
    <dimen name="H2">20sp</dimen>
    <dimen name="H3">18sp</dimen>
    <dimen name="H4">16sp</dimen>
    <dimen name="H5">14sp</dimen>
    <dimen name="H6">12sp</dimen>
    <dimen name="H7">10sp</dimen>


    <dimen name="nav_cards_height">50dp</dimen>
    <dimen name="textInputLayoutHeight">50dp</dimen>
    <dimen name="button_height">45dp</dimen>

                <!--Onboarding Screen Text Style-->
    <!--Onboarding Screen Heading Text Style-->
    <style name="OnboardingHeadingTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">25dp</item>
    </style>

    <!--Onboarding Screen Sub Heading Text Style-->
    <style name="OnboardingSubHeadingTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/H3</item>
    </style>

            <!-- OnBoarding Text Input Layout Theme-->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:background">@color/white</item>
        <item name="hintTextColor">@color/textHighlighted</item>
        <item name="background">@color/white</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    //SubHeadingTextBold
    <style name="subHeadingTextBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/H5</item>
    </style>

    //OtaName
    <style name="otaNameText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/H5</item>
    </style>

    //TextforRatesandInventory
    <style name="inventoryText" parent="android:Widget.TextView">
        <item name="android:textColor">#1936CB</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/H5</item>
    </style>

    //TextforRates
    <style name="rateText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/H5</item>
    </style>

    //Ota Rates
    <style name="otaRates" parent="android:Widget.TextView">
        <item name="android:textColor">@color/subtitle</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/H5</item>
    </style>

    <style name="subText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondary</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/H6</item>
    </style>

    <style name="ClickableTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!--Box Stroke-->
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/subtitle</item>
<!--        <item name="android:textColorHint">@color/secondary</item>-->
        <item name="hintTextColor">@color/textHighlighted</item>
        <!--End Icon-->
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/svg_arrow_down</item>
        <item name="endIconTint">@color/black</item>
        <!--Radius-->
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <!--Card View Theme-->
    <style name="CardViewTheme" parent="CardView">
        <item name="android:outlineAmbientShadowColor">@color/shadowColor</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:outlineSpotShadowColor">@color/shadowColor</item>
    </style>

    <!--Card View Theme-->
    <style name="OnBoardingCardViewTheme" parent="CardView">
        <item name="android:outlineAmbientShadowColor">@color/shadowColor</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="cardElevation">8dp</item>
        <item name="android:outlineSpotShadowColor">@color/shadowColor</item>
    </style>

    <!--Button Card View Theme-->
    <style name="ButtonCardView" parent="CardView">
        <item name="android:outlineAmbientShadowColor">@color/shadowColor</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:outlineSpotShadowColor">@color/shadowColor</item>
    </style>

                                    <!-- Shapeable ImageView -->
                            <style name="RoundedCornerImage_Circle">
                                <item name="cornerSize">50%</item>
                            </style>

                            <style name="RoundedCornerImage_5">
                                <item name="cornerSize">5%</item>
                            </style>

                            <style name="RoundedCornerImage_10">
                                <item name="cornerSize">10%</item>
                            </style>

                            <style name="RoundedCornerImage_15">
                                <item name="cornerSize">15%</item>
                            </style>

</resources>