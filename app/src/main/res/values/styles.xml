        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">25dp</item>
    </style>
    <!--Onboarding Screen Sub Heading Text Style-->
