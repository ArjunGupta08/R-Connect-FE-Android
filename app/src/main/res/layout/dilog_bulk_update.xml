<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="9dp"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/head_bulk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/H5"
        android:text="Bulk Update"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sourceLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/ClickableTextInputLayoutStyle"
            android:layout_marginStart="15dp"
            android:hint="Source"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_inventory"
            app:layout_constraintTop_toBottomOf="@id/head_bulk">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sourceText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:hint="Select Room Type"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_inventory"
            android:layout_width="0dp"
            android:layout_height="@dimen/textInputLayoutHeight"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toEndOf="@id/sourceLayout"
            app:layout_constraintTop_toTopOf="@id/sourceLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/sourceLayout"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/H6"
                    android:text="Inventory"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/secondary"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/H7"
                    android:text="Reset"
                    android:textColor="@color/secondary"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/add"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_add_icon"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/room_typeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/ClickableTextInputLayoutStyle"
            android:layout_marginStart="15dp"
            android:hint="Room Type"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_rates"
            app:layout_constraintTop_toBottomOf="@id/sourceLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/room_typeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:hint="Select Room Type"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_rates"
            android:layout_width="0dp"
            android:layout_height="@dimen/textInputLayoutHeight"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toEndOf="@id/room_typeLayout"
            app:layout_constraintTop_toTopOf="@id/room_typeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/room_typeLayout"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/H6"
                    android:text="Rates"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/secondary"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/H7"
                    android:text="Reset"
                    android:textColor="@color/secondary"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/add_rates"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/add_rates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_add_icon"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rate_planLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/ClickableTextInputLayoutStyle"
            android:layout_marginStart="15dp"
            android:hint="Rate Plan"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_restrictions"
            app:layout_constraintTop_toBottomOf="@id/room_typeLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rate_planText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:hint="Select Rate Plan"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_restrictions"
            android:layout_width="0dp"
            android:layout_height="@dimen/textInputLayoutHeight"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toEndOf="@id/rate_planLayout"
            app:layout_constraintTop_toTopOf="@id/rate_planLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rate_planLayout"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/H6"
                    android:text="Restrictions"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/secondary"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/H7"
                    android:text="Reset"
                    android:textColor="@color/secondary"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/add_restriction"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/add_restriction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_add_icon"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/from_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/ClickableDateStyle"
            android:layout_marginStart="15dp"
            android:hint="From"
            app:startIconDrawable="@drawable/svg_date"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/to_Layout"
            app:layout_constraintTop_toBottomOf="@id/rate_planLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/from_Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:hint="Select Rate Plan"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:text="12 MAR 2023"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/to_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/ClickableDateStyle"
            android:layout_marginStart="15dp"
            android:hint="To"
            app:startIconDrawable="@drawable/svg_date"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toEndOf="@id/from_Layout"
            app:layout_constraintEnd_toEndOf="@id/rate_planLayout"
            app:layout_constraintTop_toBottomOf="@id/rate_planLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/to_Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:hint="Select Rate Plan"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:text="12 MAR 2023"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/txt_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/from_Layout"
            app:layout_constraintStart_toStartOf="@id/from_Layout"
            android:text="Apply To"
            android:textSize="11sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/lightBlack"/>
        <TextView
            android:id="@+id/txt_all_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_apply"
            app:layout_constraintStart_toEndOf="@id/txt_apply"
            app:layout_constraintEnd_toEndOf="@id/txt_apply"
            android:layout_marginTop="16dp"
            android:textSize="11sp"
            android:textColor="@color/lightBlack"
            android:text="All Days"/>
        <TextView
            android:id="@+id/txt_weekends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/txt_all_days"
            app:layout_constraintBottom_toBottomOf="@id/txt_all_days"
            app:layout_constraintEnd_toEndOf="@id/txt_week_days"
            android:layout_marginTop="16dp"
            android:textSize="11sp"
            android:textColor="@color/lightBlack"
            android:text="All Days"/>
        <TextView
            android:id="@+id/txt_week_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/txt_all_days"
            app:layout_constraintBottom_toBottomOf="@id/txt_all_days"
            app:layout_constraintEnd_toEndOf="@id/txt_custom"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_text_background"
            android:textSize="11sp"
            android:textColor="@color/lightBlack"
            android:text="All Days"/>
        <TextView
            android:id="@+id/txt_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/txt_all_days"
            app:layout_constraintBottom_toBottomOf="@id/txt_all_days"
            app:layout_constraintEnd_toEndOf="@id/to_Layout"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginTop="16dp"
            android:textSize="11sp"
            android:textColor="@color/lightBlack"
            android:text="All Days"/>







</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>