<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondaryBackground"
    tools:context=".dashboard.channelManager.AddReservationFragment.AddReservationFragment">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:text="Add Reservation"
        android:textSize="@dimen/H2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/H5"
        android:padding="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/continueBtn"
        app:layout_constraintBottom_toBottomOf="@id/continueBtn"
        app:layout_constraintTop_toTopOf="@id/continueBtn"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/continueBtn"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        style="@style/CardViewTheme"
        app:cardElevation="4dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/heading"
        app:layout_constraintTop_toTopOf="@id/heading"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/H5"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="2"
        android:background="@color/secondaryBackground"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:layout_marginTop="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:layout_marginEnd="12dp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:backgroundTint="@color/primaryBackground"
                        app:cardCornerRadius="12dp"
                        android:layout_marginStart="20dp"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/detail_heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/H4"
                                android:textFontWeight="500"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="20dp"
                                android:text="Reservation Details"
                                />

                            <LinearLayout
                                android:id="@+id/linear_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/detail_heading"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="10dp"
                                android:weightSum="4"
                                >

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/CheckIn_layout"
                                    style="@style/ClickableTextInputLayoutStyle"
                                    android:layout_width="250dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="10dp"
                                    android:weightSum="1"
                                    app:endIconDrawable="@drawable/calender"
                                    android:layout_weight="1"
                                    android:hint="Check-In">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto"
                                        android:editable="false"
                                        android:focusable="false"
                                        android:text="13/03/2023 - 16:00"
                                        android:clickable="true"
                                        android:inputType="none"
                                        android:textColor="@color/secondary"
                                        android:textColorHint="@drawable/hint_selector"
                                        android:textSize="@dimen/H5" />

                                </com.google.android.material.textfield.TextInputLayout>




                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/CheckOut_layout"
                                    style="@style/ClickableTextInputLayoutStyle"
                                    android:layout_width="250dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="10dp"
                                    app:endIconDrawable="@drawable/calender"
                                    android:layout_weight="1"
                                    android:hint="Check-Out">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto"
                                        android:editable="false"
                                        android:focusable="false"
                                        android:clickable="true"
                                        android:layout_marginTop="5dp"
                                        android:text="13/03/2023 - 16:00"
                                        android:inputType="none"
                                        android:textColor="@color/secondary"
                                        android:textColorHint="@drawable/hint_selector"
                                        android:textSize="@dimen/H5" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="100dp"
                                    android:layout_height="45dp"
                                    android:layout_gravity="bottom"
                                    app:cardCornerRadius="10dp"
                                    android:backgroundTint="#C5CDDB"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="10dp"
                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="2"

                                        android:gravity="center"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="3"
                                            android:textSize="@dimen/H5"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_gravity="center"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Nights"
                                            android:textSize="@dimen/H5"
                                            android:fontFamily="@font/roboto"
                                            android:layout_gravity="center"
                                            android:textColor="@color/subtitle"
                                            />

                                    </LinearLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/rateType_layout"
                                    style="@style/ClickableTextInputLayoutStyle"
                                    android:layout_width="270dp"
                                    app:layout_constraintTop_toBottomOf="@id/detail_heading"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:hint="Rate Type">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto"
                                        android:editable="false"
                                        android:focusable="false"
                                        android:clickable="true"
                                        android:text="BAR Rate"
                                        android:inputType="none"
                                        android:textColor="@color/secondary"
                                        android:textColorHint="@drawable/hint_selector"
                                        android:textSize="@dimen/H5" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_2"
                                android:layout_width="515dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/linear_1"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:weightSum="2"
                                android:layout_marginBottom="20dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                >



                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/bookingSource_layout"
                                    style="@style/ClickableTextInputLayoutStyle"
                                    android:layout_width="270dp"
                                    app:layout_constraintTop_toBottomOf="@id/detail_heading"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:hint="Booking Source">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto"
                                        android:editable="false"
                                        android:focusable="false"
                                        android:clickable="true"
                                        android:text="Walk-in"
                                        android:inputType="none"
                                        android:textColor="@color/secondary"
                                        android:textColorHint="@drawable/hint_selector"
                                        android:textSize="@dimen/H5" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/bookingType_layout"
                                    style="@style/ClickableTextInputLayoutStyle"
                                    android:layout_width="270dp"
                                    app:layout_constraintTop_toBottomOf="@id/detail_heading"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:hint="Booking Type">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto"
                                        android:editable="false"
                                        android:focusable="false"
                                        android:clickable="true"
                                        android:text="Confirmed"
                                        android:inputType="none"
                                        android:textColor="@color/secondary"
                                        android:textColorHint="@drawable/hint_selector"
                                        android:textSize="@dimen/H5" />

                                </com.google.android.material.textfield.TextInputLayout>


                            </LinearLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/primaryBackground"
                        app:cardCornerRadius="12dp"
                        android:layout_weight="1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/room_heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/H4"
                                android:textFontWeight="500"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="20dp"
                                android:text="Reservation Details"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/primaryBackground"
                        app:cardCornerRadius="12dp"
                        android:layout_weight="1"
                        >


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1.25"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primaryBackground"
            app:cardCornerRadius="12dp"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>