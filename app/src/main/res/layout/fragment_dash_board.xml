<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="@color/secondaryBackground"
    tools:context=".dashboard.DashBoardFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp"
        app:strokeWidth="0dp"
        android:background="@color/primaryBackground"
        android:backgroundTint="@color/primaryBackground"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/card_icon"
                app:layout_constraintBottom_toBottomOf="@id/card_icon"
                android:text="Bookings"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/H3"
                android:fontFamily="@font/roboto_bold"
                android:textFontWeight="500"
                android:textColor="@color/black"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_icon"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="8dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/primaryBackground"
                android:outlineSpotShadowColor="@color/dark_grey"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/search_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/search_icon"
                        android:layout_marginStart="10dp"
                        />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/search_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@color/primaryBackground"
                        android:hint="Search"
                        android:layout_marginStart="10dp"
                        android:textSize="@dimen/H4"
                        android:fontFamily="@font/roboto"
                        android:textFontWeight="500"
                        android:textColor="#7B7F80"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/calender_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/booking_calender_icon"
                app:layout_constraintTop_toTopOf="@+id/card_icon"
                app:layout_constraintBottom_toBottomOf="@id/card_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                app:layout_constraintTop_toTopOf="@id/card_icon"
                app:layout_constraintBottom_toBottomOf="@id/card_icon"
                app:layout_constraintEnd_toStartOf="@+id/calender_icon"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/H4"
                />


