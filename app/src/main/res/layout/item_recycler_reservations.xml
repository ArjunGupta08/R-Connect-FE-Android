<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/items_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.14"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.32"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide2_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.52"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.64"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.76"/>

        <TextView
            android:id="@+id/reservationId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/secondary"
            android:textSize="@dimen/H5"
            android:text="ABCD123456789"
            app:layout_constraintEnd_toStartOf="@id/text2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/img_go"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/reservationId"
            app:layout_constraintStart_toStartOf="@id/reservationId"
            android:src="@drawable/img_go"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#DEF4E4"
            app:layout_constraintStart_toEndOf="@id/img_go"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/img_go"
            app:layout_constraintBottom_toBottomOf="@id/img_go">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/H5"
                android:textColor="#1CBC49"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginVertical="1dp"
                android:layout_marginHorizontal="7dp"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/secondary"
            android:textSize="@dimen/H5"
            android:text="Mr. Adam William Smith"
            app:layout_constraintEnd_toEndOf="@id/guide2"
            app:layout_constraintStart_toStartOf="@id/guide1"
            app:layout_constraintBottom_toBottomOf="@id/reservationId"
            app:layout_constraintTop_toTopOf="@id/reservationId"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintStart_toStartOf="@id/text2"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/icon_people"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/H5"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_gravity="top"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_marginEnd="5dp"
                />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/child_svg"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/H4"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_gravity="top"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_marginEnd="5dp"
                />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/key_svg"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/H4"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_marginEnd="5dp"
                />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/child_svg"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/H4"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_marginEnd="5dp"
                />


        </LinearLayout>




        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/secondary"
            android:textSize="@dimen/H5"
            android:text="Deluxe Room With Breakfast"
            app:layout_constraintEnd_toStartOf="@id/text4"
            app:layout_constraintStart_toStartOf="@id/guide2"
            app:layout_constraintBottom_toBottomOf="@id/reservationId"
            app:layout_constraintTop_toTopOf="@id/reservationId"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/listTextHeading"
            android:text="12 Sep, 11:30 AM"
            app:layout_constraintStart_toEndOf="@id/guide2_5"
            app:layout_constraintEnd_toStartOf="@id/guide3"
            app:layout_constraintBottom_toBottomOf="@id/reservationId"
            app:layout_constraintTop_toTopOf="@id/reservationId"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/listTextHeading"
            android:text="12 Sep, 11:30 AM"
            app:layout_constraintEnd_toStartOf="@id/text6"
            app:layout_constraintStart_toStartOf="@id/guide3"
            app:layout_constraintBottom_toBottomOf="@id/reservationId"
            app:layout_constraintTop_toTopOf="@id/reservationId"/>

        <TextView
            android:id="@+id/text6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/listTextHeading"
            android:text="₹ 12,999.00"
            app:layout_constraintStart_toEndOf="@id/guide4"
            app:layout_constraintBottom_toBottomOf="@id/reservationId"
            app:layout_constraintTop_toTopOf="@id/reservationId"/>


        <TextView
            android:id="@+id/actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/listTextHeading"
            android:text="₹ 12,999.00"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guide4"
            app:layout_constraintBottom_toBottomOf="@id/reservationId"
            app:layout_constraintTop_toTopOf="@id/reservationId"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/reservationId"
            app:layout_constraintBottom_toBottomOf="@id/reservationId"
            android:src="@drawable/img_dots"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>