<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.configuration.roomsAndRates.addPropertyFrags.AddPropertyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondaryBackground">

        <TextView
            android:id="@+id/addPropertyHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:text="Add Property"
            android:textSize="@dimen/H2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/H5"
            android:padding="15dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/continueBtn"
            app:layout_constraintTop_toTopOf="@id/continueBtn"
            app:layout_constraintEnd_toStartOf="@id/continueBtn"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/continueBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="10dp"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@id/addPropertyHeading"
            app:layout_constraintTop_toTopOf="@id/addPropertyHeading"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/H5"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@color/secondaryBackground"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/propertyProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary"
                android:text="Property Profile"
                android:textAlignment="center"
                android:textSize="@dimen/H3"
                android:paddingVertical="10dp"
                android:background="@drawable/corner_top_white_background"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/addressAndContacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/lightBlack"
                android:text="Address and contacts"
                android:textAlignment="center"
                android:background="@drawable/corner_top_grey_background"
                android:layout_weight="1"
                android:textSize="@dimen/H5"
                android:paddingVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/propertyImages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/lightBlack"
                android:text="Images"
                android:textAlignment="center"
                android:background="@drawable/corner_top_grey_background"
                android:layout_weight="1"
                android:textSize="@dimen/H5"
                android:paddingVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/propertyProfileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/corner_bottom_white_background"
                    android:paddingBottom="12dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/frame1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/frame2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/propertyDetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingVertical="5dp"
                            android:text="Property Details"
                            android:textAlignment="center"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/H4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/propertyLogoCard"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintBottom_toBottomOf="@id/ll6"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="@id/propertyDetailsText"
                            app:layout_constraintTop_toTopOf="@id/ll6"
                            app:strokeColor="@color/subtitle"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:id="@+id/propertyLogoLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/svg_gallery"
                                    app:layout_constraintBottom_toBottomOf="@id/ll6"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/ll6"
                                    app:shapeAppearance="@style/RoundedCornerImage_10" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto"
                                    android:text="Property Logo" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/propertyLogoImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@color/grey10"
                                android:visibility="gone" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:id="@+id/imageEditLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:elevation="5dp"
                            app:layout_constraintBottom_toBottomOf="@id/propertyLogoCard"
                            app:layout_constraintEnd_toEndOf="@id/propertyLogoCard"
                            app:layout_constraintStart_toStartOf="@id/propertyLogoCard"
                            app:layout_constraintTop_toBottomOf="@id/propertyLogoCard">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="20dp"
                                android:src="@drawable/svg_upper_triangle"
                                app:tint="@color/lightBlack" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginBottom="15dp"
                                android:elevation="6dp"
                                app:cardBackgroundColor="@color/lightBlack"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="6dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/replaceImage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/svg_gallery_edit" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_medium"

                                            android:text="Replace"
                                            android:textColor="@color/white" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/removeImage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/svg_gallery_remove" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_medium"
                                            android:text="Remove"

                                            android:textColor="@color/white" />
                                    </LinearLayout>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/propertyLogoCard"
                            app:layout_constraintTop_toBottomOf="@id/propertyDetailsText">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/propertyNameLayout"
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Property Name"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/black">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/propertyNameET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto"
                                    android:inputType="text"
                                    android:textColor="@color/secondary"
                                    android:textColorHint="@color/secondary"
                                    android:textSize="@dimen/H5"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/propertyTypeLayout"
                                style="@style/ClickableTextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Property Type"
                                android:layout_marginTop="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/propertyTypeET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto"
                                    android:inputType="text"
                                    android:textColor="@color/secondary"
                                    android:textColorHint="@color/secondary"
                                    android:textSize="@dimen/H5"
                                    android:focusable="false"
                                    android:editable="false"
                                    android:cursorVisible="false"
                                    android:clickable="true"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/propertyRatingLayout"
                                style="@style/ClickableTextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Property Rating"
                                android:layout_marginTop="5dp"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/propertyRatingET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto"
                                    android:inputType="text"
                                    android:textColor="@color/secondary"
                                    android:textColorHint="@color/secondary"
                                    android:textSize="@dimen/H5"
                                    android:focusable="false"
                                    android:editable="false"
                                    android:cursorVisible="false"
                                    android:clickable="true"/>

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="@id/ll6"
                            app:layout_constraintStart_toStartOf="@id/propertyDetailsText"
                            app:layout_constraintTop_toBottomOf="@id/ll6">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textInputLayoutHeight"
                                android:layout_marginTop="5dp"
                                android:hint="Website"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/black">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/websiteET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto"
                                    android:inputType="text"
                                    android:textColor="@color/secondary"
                                    android:textColorHint="@color/secondary"
                                    android:textSize="@dimen/H5" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingVertical="5dp"
                                    android:text="Property’s Description"
                                    android:textAlignment="center"
                                    android:textColor="@color/secondary"
                                    android:textSize="@dimen/H4" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/CardViewTheme"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="3dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="2dp">

                                    <EditText
                                        android:id="@+id/descriptionET"
                                        style="@style/TextAppearance.AppCompat.Body1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:gravity="start"
                                        android:hint="Describe the room"
                                        android:maxHeight="180dp"
                                        android:minHeight="120dp"
                                        android:padding="8dp"
                                        android:textSize="@dimen/H5" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/frame2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/frame1"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:paddingVertical="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Property Amenities"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/H4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/add"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginEnd="15dp"
                            android:clickable="true"
                            android:backgroundTint="@color/black"
                            app:cardCornerRadius="10dp"
                            android:focusable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/textView"
                            app:layout_constraintTop_toTopOf="@id/textView">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_medium"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:paddingHorizontal="10dp"
                                android:text="+ Add Amenities"
                                android:textColor="@color/white"
                                android:textSize="@dimen/H5"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/selectedAmenitiesRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="17dp"
                            android:layout_marginTop="10dp"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:layout_constraintTop_toBottomOf="@id/add"
                            app:spanCount="3"
                            tools:listitem="@layout/item_amenities" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingBottom="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/corner_bottom_white_background"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/addressLayoutF1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:layout_constraintEnd_toStartOf="@id/addressLayoutF2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/aT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Address"
                            android:textSize="@dimen/H4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/ll5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/aT">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/addressLine1Layout"
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textInputLayoutHeight"
                                android:layout_marginTop="10dp"
                                app:errorEnabled="true"
                                android:hint="Address line 1"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/black">

                                <AutoCompleteTextView
                                    android:id="@+id/addressLine1ET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto"
                                    android:textSize="@dimen/H5"
                                    android:paddingStart="15dp"
                                    android:inputType="text"
                                    android:textColor="@color/secondary"
                                    android:textColorHint="@color/secondary" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/addressLine2Layout"
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textInputLayoutHeight"
                                android:layout_marginTop="10dp"
                                android:hint="Address line 2"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/black">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/addressLine2ET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto"
                                    android:textSize="@dimen/H5"
                                    android:inputType="text"
                                    android:textColor="@color/secondary"
                                    android:textColorHint="@color/secondary" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/country_layout"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            style="@style/TextInputLayoutStyle"
                            android:hint="Country"
                            android:layout_marginTop="10dp"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black"
                            app:layout_constraintEnd_toStartOf="@id/state_layout"
                            app:layout_constraintTop_toBottomOf="@id/ll5"
                            app:layout_constraintStart_toStartOf="@id/ll5">

                            <AutoCompleteTextView
                                android:id="@+id/country_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto"
                                android:inputType="text"
                                android:textSize="@dimen/H4"
                                android:paddingStart="15dp"
                                android:textColorHint="@color/secondary"
                                android:textColor="@color/secondary"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/state_layout"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            style="@style/TextInputLayoutStyle"
                            android:hint="State"
                            android:layout_marginStart="10dp"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black"
                            app:layout_constraintTop_toTopOf="@id/country_layout"
                            app:layout_constraintEnd_toEndOf="@id/ll5"
                            app:layout_constraintBottom_toBottomOf="@id/country_layout"
                            app:layout_constraintStart_toEndOf="@id/country_layout">

                            <AutoCompleteTextView
                                android:id="@+id/state_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto"
                                android:inputType="text"
                                android:textSize="@dimen/H4"
                                android:paddingStart="15dp"
                                android:textColorHint="@color/secondary"
                                android:textColor="@color/secondary"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/city_layout"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            style="@style/TextInputLayoutStyle"
                            android:hint="City"
                            android:layout_marginTop="10dp"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black"
                            app:layout_constraintEnd_toStartOf="@id/pincode_layout"
                            app:layout_constraintTop_toBottomOf="@id/country_layout"
                            app:layout_constraintStart_toStartOf="@id/ll5">

                            <AutoCompleteTextView
                                android:id="@+id/city_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto"
                                android:inputType="text"
                                android:textSize="@dimen/H4"
                                android:paddingStart="15dp"
                                android:textColorHint="@color/secondary"
                                android:textColor="@color/secondary"/>


                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/pincode_layout"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            style="@style/TextInputLayoutStyle"
                            android:hint="PinCode"
                            android:layout_marginStart="10dp"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black"
                            app:layout_constraintStart_toEndOf="@id/city_layout"
                            app:layout_constraintEnd_toEndOf="@id/ll5"
                            app:layout_constraintTop_toTopOf="@id/city_layout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/pincode_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto"
                                android:inputType="number"
                                android:textColorHint="@color/secondary"
                                android:textColor="@color/secondary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/cT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Contacts"
                            android:textSize="@dimen/H4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/pincode_layout" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/phoneLayout"
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/textInputLayoutHeight"
                            android:layout_marginTop="10dp"
                            android:hint="Phone"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black"
                            app:layout_constraintEnd_toStartOf="@id/reservationPhoneLayout"
                            app:layout_constraintStart_toStartOf="@id/ll5"
                            app:layout_constraintTop_toBottomOf="@id/cT">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phoneText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto"
                                android:inputType="number"
                                android:textSize="@dimen/H5"
                                android:maxLength="10"
                                android:textColor="@color/secondary"
                                android:textColorHint="@color/secondary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reservationPhoneLayout"
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/textInputLayoutHeight"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:hint="Reservation Phone"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black"
                            app:layout_constraintEnd_toEndOf="@id/ll5"
                            app:layout_constraintStart_toEndOf="@id/phoneLayout"
                            app:layout_constraintTop_toBottomOf="@id/cT">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reservationPhoneText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/H5"
                                android:maxLength="12"
                                android:fontFamily="@font/roboto"
                                android:inputType="number"
                                android:textColor="@color/secondary"
                                android:textColorHint="@color/secondary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/emailLayout"
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/textInputLayoutHeight"
                            android:layout_marginTop="10dp"
                            android:hint="Email"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black"
                            app:layout_constraintEnd_toStartOf="@id/websiteLayout"
                            app:layout_constraintStart_toStartOf="@id/city_layout"
                            app:layout_constraintTop_toBottomOf="@+id/phoneLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/H5"
                                android:fontFamily="@font/roboto"
                                android:inputType="text"
                                android:textColor="@color/secondary"
                                android:textColorHint="@color/secondary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/websiteLayout"
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/textInputLayoutHeight"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:hint="Website"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black"
                            app:layout_constraintEnd_toEndOf="@id/pincode_layout"
                            app:layout_constraintStart_toEndOf="@id/emailLayout"
                            app:layout_constraintTop_toBottomOf="@+id/phoneLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/websiteText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto"
                                android:textSize="@dimen/H5"
                                android:inputType="text"
                                android:textColor="@color/secondary"
                                android:textColorHint="@color/secondary" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/addressLayoutF2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/addressLayoutF1"
                        app:layout_constraintBottom_toBottomOf="@id/addressLayoutF1"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/aT2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Location"
                            android:textSize="@dimen/H4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <fragment
                            android:id="@+id/mapFragContainer"
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="25dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/aT2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/propertyImagesFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:paddingBottom="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/corner_bottom_white_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>