<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".dashboard.addPropertyFrags.AddPropertyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:text="Add Property"
            android:textSize="@dimen/H1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/H5"
            android:padding="15dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/continueBtn"
            app:layout_constraintTop_toTopOf="@id/continueBtn"
            app:layout_constraintEnd_toStartOf="@id/continueBtn"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/continueBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="10dp"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/H5"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/propertyProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary"
                android:text="Property Profile"
                android:textAlignment="center"
                android:textSize="@dimen/H3"
                android:paddingVertical="10dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/addressAndContacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/lightBlack"
                android:text="Address and contacts"
                android:textAlignment="center"
                android:background="@drawable/corner_top_grey_background"
                android:layout_weight="1"
                android:textSize="@dimen/H5"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/roomsAndAmenities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary"
                android:text="Rooms &amp; Amenities"
                android:textAlignment="center"
                android:textSize="@dimen/H4"
                android:paddingVertical="5dp"
                android:background="@drawable/corner_top_grey_background"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/propertyProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/ll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/frame2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/propertyDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingVertical="5dp"
                    android:text="Property Details"
                    android:textAlignment="center"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/H4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/propertyLogoCard"
                    android:layout_width="170dp"
                    android:layout_height="0dp"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/ll6"
                    app:layout_constraintStart_toStartOf="@id/ll2"
                    app:layout_constraintTop_toTopOf="@id/ll6">
                    <LinearLayout
                        android:id="@+id/propertyLogoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/svg_gallery"
                            android:scaleType="centerCrop"
                            app:shapeAppearance="@style/SquareCornerImageM"
                            app:layout_constraintBottom_toBottomOf="@id/ll6"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/ll6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Property Logo"/>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/propertyLogoImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/grey10"
                        android:visibility="gone"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/ll6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/propertyLogoCard"
                    app:layout_constraintTop_toBottomOf="@id/propertyDetails">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Property Name"
                        android:textColorHint="@color/black"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/black"
                        app:hintTextColor="@color/secondary"
                        app:layout_constraintEnd_toEndOf="@id/propertyTypeLayout"
                        app:layout_constraintStart_toStartOf="@id/propertyTypeLayout"
                        app:layout_constraintTop_toBottomOf="@id/propertyTypeLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto"
                            android:inputType="text"
                            android:textColor="@color/secondary"
                            android:textColorHint="@color/secondary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Property type"
                        android:textColorHint="@color/black"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconDrawable="@drawable/svg_arrow_down"
                        app:endIconMode="custom"
                        app:hintTextColor="@color/secondary"
                        app:layout_constraintEnd_toEndOf="@id/TaxNameLayout"
                        app:layout_constraintStart_toStartOf="@id/TaxNameLayout"
                        app:layout_constraintTop_toBottomOf="@+id/TaxNameLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:fontFamily="@font/roboto"
                            android:inputType="text"
                            android:textColor="@color/secondary"
                            android:textColorHint="@color/secondary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Property Ratting"
                        android:textColorHint="@color/black"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconDrawable="@drawable/svg_arrow_down"
                        app:endIconMode="custom"
                        app:hintTextColor="@color/secondary"
                        app:layout_constraintEnd_toEndOf="@id/TaxNameLayout"
                        app:layout_constraintStart_toStartOf="@id/TaxNameLayout"
                        app:layout_constraintTop_toBottomOf="@+id/TaxNameLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:fontFamily="@font/roboto"
                            android:inputType="text"
                            android:textColor="@color/secondary"
                            android:textColorHint="@color/secondary" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="@id/ll6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll6">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Website"
                        android:textColorHint="@color/black"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/black"
                        app:hintTextColor="@color/secondary"
                        app:layout_constraintEnd_toEndOf="@id/propertyTypeLayout"
                        app:layout_constraintStart_toStartOf="@id/propertyTypeLayout"
                        app:layout_constraintTop_toBottomOf="@id/propertyTypeLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto"
                            android:inputType="text"
                            android:textColor="@color/secondary"
                            android:textColorHint="@color/secondary" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Property Amenities"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/H4"
                    app:layout_constraintStart_toStartOf="@id/ll2"
                    app:layout_constraintTop_toBottomOf="@id/ll2" />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/H5"
                    android:paddingVertical="5dp"
                    android:text="+ Add"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/H5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/amenitiesRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    tools:listitem="@layout/item_amenities"
                    app:layout_constraintTop_toBottomOf="@id/add"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frame2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/frame1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingVertical="5dp"
                        android:text="Property’s Description"
                        android:textAlignment="center"
                        android:textColor="@color/secondary"
                        android:textSize="@dimen/H4"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginVertical="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:background="@null"
                            android:minHeight="120dp"
                            android:maxHeight="180dp"
                            android:hint="Describe the room"
                            android:gravity="start"
                            android:padding="8dp"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/imagesT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Images"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/H4"
                    android:textColor="@color/secondary"
                    app:layout_constraintStart_toStartOf="@id/ll3"
                    app:layout_constraintTop_toBottomOf="@id/ll3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max 2 MB per image, Upto 10 images"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/H6"
                    android:textColor="@color/secondary"
                    app:layout_constraintBottom_toBottomOf="@id/imagesT"
                    app:layout_constraintStart_toEndOf="@id/imagesT"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imagesRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintTop_toBottomOf="@id/imagesT"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ll">

            <TextView
                android:id="@+id/aT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/H4"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toBottomOf="@id/aT"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:hint="Address line 1"
                    android:layout_marginTop="10dp"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black"
                    app:layout_constraintStart_toStartOf="@id/propertyTypeLayout"
                    app:layout_constraintTop_toBottomOf="@id/propertyTypeLayout"
                    app:layout_constraintEnd_toEndOf="@id/propertyTypeLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto"
                        android:inputType="text"
                        android:textColorHint="@color/secondary"
                        android:textColor="@color/secondary" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:hint="Address line 2"
                    android:layout_marginTop="10dp"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black"
                    app:layout_constraintStart_toStartOf="@id/propertyTypeLayout"
                    app:layout_constraintTop_toBottomOf="@id/propertyTypeLayout"
                    app:layout_constraintEnd_toEndOf="@id/propertyTypeLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto"
                        android:inputType="text"
                        android:textColorHint="@color/secondary"
                        android:textColor="@color/secondary" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pincode_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="Zip Code*"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:endIconMode="custom"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toStartOf="@id/city_layout"
                app:layout_constraintStart_toStartOf="@id/ll5"
                app:layout_constraintTop_toBottomOf="@+id/ll5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pincode_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:inputType="number"
                    android:textColorHint="@color/secondary"
                    android:textColor="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/city_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="City*"
                android:layout_marginStart="10dp"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/secondary"
                android:layout_marginTop="10dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/svg_arrow_down"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toEndOf="@id/ll5"
                app:layout_constraintStart_toEndOf="@id/pincode_layout"
                app:layout_constraintTop_toBottomOf="@+id/ll5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/city_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:inputType="text"
                    android:textColorHint="@color/secondary"
                    android:textColor="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/state_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="State*"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/secondary"
                android:layout_marginTop="10dp"
                app:endIconDrawable="@drawable/svg_arrow_down"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:endIconMode="custom"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toStartOf="@id/country_layout"
                app:layout_constraintStart_toStartOf="@id/pincode_layout"
                app:layout_constraintTop_toBottomOf="@+id/pincode_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/state_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:inputType="text"
                    android:textColorHint="@color/secondary"
                    android:textColor="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/country_layout"
