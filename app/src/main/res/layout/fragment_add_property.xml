            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="Phone"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toStartOf="@id/reservationPhoneLayout"
                app:layout_constraintStart_toStartOf="@id/ll5"
                app:layout_constraintTop_toBottomOf="@id/cT">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="@color/secondary"
                    android:textColor="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reservationPhoneLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="Reservation Phone"
                android:layout_marginStart="10dp"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toEndOf="@id/ll5"
                app:layout_constraintStart_toEndOf="@id/phoneLayout"
                app:layout_constraintTop_toBottomOf="@id/cT">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reservationPhoneText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:inputType="number"
                    android:textColorHint="@color/secondary"
                    android:textColor="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="Email"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:endIconMode="custom"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toStartOf="@id/websiteLayout"
                app:layout_constraintStart_toStartOf="@id/state_layout"
                app:layout_constraintTop_toBottomOf="@+id/phoneLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:inputType="text"
                    android:textColorHint="@color/secondary"
                    android:textColor="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/websiteLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="Website"
                android:layout_marginStart="10dp"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toEndOf="@id/city_layout"
                app:layout_constraintStart_toEndOf="@id/emailLayout"
                app:layout_constraintTop_toBottomOf="@+id/phoneLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/websiteText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:inputType="text"
                    android:textColorHint="@color/secondary"
                    android:textColor="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

