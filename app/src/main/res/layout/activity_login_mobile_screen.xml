<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginMobileScreenActivity">
    
    <ImageView
        android:id="@+id/logo"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/svg_logo"/>

    <LinearLayout
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:transitionName="login_board"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo">

        <TextView
            android:id="@+id/openLoginScreen"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="@string/new_here_sign_up"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/mobile_corner_left_grey_background"
            android:textSize="@dimen/H5"
            android:fontFamily="@font/roboto"
            android:layout_marginEnd="-12dp"
            android:textFontWeight="500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <View-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:background="@color/black"/>-->

        <TextView
            android:id="@+id/openSignUpScreen"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="@string/log_in"
            android:textAlignment="center"
            android:background="@drawable/mobile_corner_right_black_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/H4"
            android:fontFamily="@font/roboto_bold"
            android:textFontWeight="500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@id/loginTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    
    
    
    
    
    
    
    
    

</androidx.constraintlayout.widget.ConstraintLayout>