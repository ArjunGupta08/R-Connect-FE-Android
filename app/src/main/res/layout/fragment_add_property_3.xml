<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.chainDashboard.addPropertyFrags.AddPropertyFragment_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">


    <TextView
        android:id="@+id/aT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Amenities &amp; Facilities"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/H4"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/amenitiesRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/item_amenities"
        app:layout_constraintStart_toStartOf="@id/aT"
        app:layout_constraintTop_toBottomOf="@id/aT"/>

    <TextView
        android:id="@+id/addAmenities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Amenities"
        android:textSize="@dimen/H5"
        android:layout_marginHorizontal="5dp"
        android:padding="5dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/amenitiesRecycler"
        app:layout_constraintStart_toStartOf="@id/amenitiesRecycler"/>

    <TextView
        android:id="@+id/rP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms in Property"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/H4"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/aT"
        app:layout_constraintTop_toBottomOf="@id/addAmenities"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomsRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4"
        tools:listitem="@layout/item_rooms_in_property"
        app:layout_constraintTop_toBottomOf="@id/rP"
        app:layout_constraintStart_toStartOf="@id/amenitiesRecycler"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/addRooms"
        android:layout_width="250dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/roomsRecycler"
        app:layout_constraintStart_toStartOf="@id/amenitiesRecycler">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/svg_add_plus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Room Type"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/H5"
                android:textColor="@color/subtitle"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>