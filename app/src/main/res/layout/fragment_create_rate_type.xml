<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/secondaryBackground"
    tools:context=".dashboard.configuration.roomsAndRates.createRate.CreateRateTypeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:text="Create Rate Type"
        android:textSize="@dimen/H2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/H5"
        android:padding="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/continueBtn"
        app:layout_constraintBottom_toBottomOf="@id/continueBtn"
        app:layout_constraintTop_toTopOf="@id/continueBtn"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/continueBtn"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        style="@style/CardViewTheme"
        app:cardElevation="4dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/heading"
        app:layout_constraintTop_toTopOf="@id/heading"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/H5"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/dropDownLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:elevation="2dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/corner_bottom_white_background"
            app:layout_constraintTop_toBottomOf="@id/rateTypeLayout"
            app:layout_constraintStart_toStartOf="@id/rateTypeLayout"
            app:layout_constraintEnd_toEndOf="@id/rateTypeLayout">

            <LinearLayout
                android:id="@+id/companyRateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/svg_setting_"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:textSize="@dimen/H5"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="13dp"
                android:background="@color/grey5"/>

            <LinearLayout
                android:id="@+id/barRateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/svg_setting_"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bar"
                    android:textSize="@dimen/H5"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="13dp"
                android:background="@color/grey5"/>

            <LinearLayout
                android:id="@+id/discountRateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/svg_setting_"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:textSize="@dimen/H5"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="13dp"
                android:background="@color/grey5"/>

            <LinearLayout
                android:id="@+id/packageRateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/svg_setting_"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Package"
                    android:textSize="@dimen/H5"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>

        </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rateTypeLayout"
                        android:layout_width="350dp"
                        android:layout_height="@dimen/textInputLayoutHeight"
                        android:layout_weight="1"
                        android:hint="Rate Type"
                        android:elevation="2dp"
                        style="@style/ClickableTextInputLayoutStyle"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintEnd_toStartOf="@id/companyNameLayout"
                        app:layout_constraintStart_toStartOf="@id/heading"
                        app:layout_constraintTop_toBottomOf="@id/continueBtn">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/rateTypeET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto"
                            android:textSize="@dimen/H5"
                            android:text="Company"
                            android:inputType="text"
                            android:textColorHint="@color/secondary"
                            android:textColor="@color/secondary"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/companyNameLayout"
                        android:layout_width="3500dp"
                        android:layout_height="@dimen/textInputLayoutHeight"
                        android:visibility="gone"
                        android:background="@color/secondaryBackground"
                        android:hint="Company Name"
                        android:layout_marginStart="10dp"
                        style="@style/TextInputLayoutStyle"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/black"
                        app:layout_constraintEnd_toStartOf="@id/roomTypeLayout"
                        app:layout_constraintTop_toTopOf="@id/rateTypeLayout"
                        app:layout_constraintBottom_toBottomOf="@id/rateTypeLayout"
                        app:layout_constraintStart_toEndOf="@id/rateTypeLayout">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto"
                            android:textSize="@dimen/H5"
                            android:hint="Select Company"
                            android:inputType="text"
                            android:textColorHint="@drawable/hint_selector"
                            android:textColor="@color/secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/roomTypeLayout"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/textInputLayoutHeight"
                        android:visibility="gone"
                        android:background="@color/secondaryBackground"
                        android:layout_marginStart="10dp"
                        android:hint="Room Type"
                        style="@style/TextInputLayoutStyle"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/black"
                        app:layout_constraintEnd_toStartOf="@id/masterRatePlanLayout"
                        app:layout_constraintTop_toTopOf="@id/companyNameLayout"
                        app:layout_constraintBottom_toBottomOf="@id/companyNameLayout"
                        app:layout_constraintStart_toEndOf="@id/companyNameLayout">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto"
                            android:textSize="@dimen/H5"
                            android:hint="Room Type"
                            android:inputType="text"
                            android:textColorHint="@drawable/hint_selector"
                            android:textColor="@color/secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/masterRatePlanLayout"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/textInputLayoutHeight"
                        android:visibility="gone"
                        android:background="@color/secondaryBackground"
                        android:layout_marginStart="10dp"
                        android:hint="Room Type"
                        style="@style/TextInputLayoutStyle"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/black"
                        app:layout_constraintEnd_toEndOf="@id/continueBtn"
                        app:layout_constraintTop_toTopOf="@id/companyNameLayout"
                        app:layout_constraintBottom_toBottomOf="@id/companyNameLayout"
                        app:layout_constraintStart_toEndOf="@id/roomTypeLayout">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto"
                            android:textSize="@dimen/H5"
                            android:hint="Room Type"
                            android:inputType="text"
                            android:textColorHint="@drawable/hint_selector"
                            android:textColor="@color/secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:id="@+id/ratePlanFragContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rateTypeLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>