<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.chainDashboard.addPropertyFrags.AddPropertyFragment_1">

    <ImageView
        android:id="@+id/propertyLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/svg_gallery"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Logo"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="@id/propertyLogo"
        app:layout_constraintTop_toBottomOf="@id/propertyLogo"
        app:layout_constraintStart_toStartOf="@id/propertyLogo"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@id/propertyLogo"
        app:layout_constraintTop_toTopOf="@id/propertyLogo"
        app:layout_constraintStart_toEndOf="@id/propertyLogo">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:hint="Property Name"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/secondary"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:layout_constraintStart_toStartOf="@id/propertyTypeLayout"
            app:layout_constraintTop_toBottomOf="@id/propertyTypeLayout"
            app:layout_constraintEnd_toEndOf="@id/propertyTypeLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColorHint="@color/secondary"
                android:textColor="@color/secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:hint="Property type"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/secondary"
            android:layout_marginTop="10dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/svg_arrow_down"
            app:layout_constraintEnd_toEndOf="@id/TaxNameLayout"
            app:layout_constraintStart_toStartOf="@id/TaxNameLayout"
            app:layout_constraintTop_toBottomOf="@+id/TaxNameLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColorHint="@color/secondary"
                android:textColor="@color/secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:hint="Property Ratting"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/secondary"
            android:layout_marginTop="10dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/svg_arrow_down"
            app:layout_constraintEnd_toEndOf="@id/TaxNameLayout"
            app:layout_constraintStart_toStartOf="@id/TaxNameLayout"
            app:layout_constraintTop_toBottomOf="@+id/TaxNameLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColorHint="@color/secondary"
                android:textColor="@color/secondary" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toEndOf="@id/ll1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll1">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:hint="Website"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/secondary"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:layout_constraintStart_toStartOf="@id/propertyTypeLayout"
            app:layout_constraintTop_toBottomOf="@id/propertyTypeLayout"
            app:layout_constraintEnd_toEndOf="@id/propertyTypeLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColorHint="@color/secondary"
                android:textColor="@color/secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:hint="Description"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/secondary"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:layout_constraintStart_toStartOf="@id/propertyTypeLayout"
            app:layout_constraintTop_toBottomOf="@id/propertyTypeLayout"
            app:layout_constraintEnd_toEndOf="@id/propertyTypeLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColorHint="@color/secondary"
                android:textColor="@color/secondary" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/imagesT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Images"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/H3"
        android:textColor="@color/secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max 2 MB per image, Upto 10 images"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        app:layout_constraintBottom_toBottomOf="@id/imagesT"
        app:layout_constraintStart_toEndOf="@id/imagesT"/>



</androidx.constraintlayout.widget.ConstraintLayout>