<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/primaryBackground"
    android:background="@color/primaryBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="19dp">
        <TextView
            android:id="@+id/room_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/H4"
            android:textFontWeight="500"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:text="Room 1"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/c_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/room_number"
            app:layout_constraintBottom_toBottomOf="@id/room_number"
            app:strokeColor="@color/black"
            android:layout_marginEnd="14dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="0dp"
            app:cardCornerRadius="9dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/H4"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginVertical="5dp"
                    android:textFontWeight="500"
                    android:textAlignment="center"
                    android:text="C Form"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/salutationLayout"
            android:layout_width="140dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:hint="Salutation"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/room_number"
            app:layout_constraintTop_toBottomOf="@id/room_number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/salutationText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textSize="@dimen/H5"
                android:hint="Mr."
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/guestLayout"
            android:layout_width="150dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_marginStart="15dp"
            android:hint="Guest Name"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/salutationLayout"
            app:layout_constraintTop_toBottomOf="@id/room_number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/guestText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textSize="@dimen/H5"
                android:hint="Adam Smith"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneLayout"
            android:layout_width="160dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_marginStart="15dp"
            android:hint="Phone Number"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/guestLayout"
            app:layout_constraintTop_toBottomOf="@id/room_number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="number"
                android:textSize="@dimen/H5"
                android:hint="+91 73079 90967"
                android:layout_gravity="bottom"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailLayout"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_marginStart="15dp"
            android:hint="Email Address"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/c_form"
            app:layout_constraintStart_toEndOf="@id/phoneLayout"
            app:layout_constraintTop_toBottomOf="@id/room_number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textSize="@dimen/H5"
                android:hint="Adamsmith@economics.com"
                android:layout_gravity="bottom"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addressLayout1"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:hint="Address Line 1"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/addressLayout2"
            app:layout_constraintStart_toStartOf="@id/salutationLayout"
            app:layout_constraintTop_toBottomOf="@id/phoneLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addressText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textSize="@dimen/H5"
                android:hint="J-805, Jonathon Building"
                android:layout_gravity="bottom"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addressLayout2"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_marginStart="15dp"
            android:hint="Address Line 2"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/c_form"
            app:layout_constraintStart_toEndOf="@id/addressLayout1"
            app:layout_constraintTop_toBottomOf="@id/phoneLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addressText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textSize="@dimen/H5"
                android:hint="26th Spring Street Avenue, Near JFK Care "
                android:layout_gravity="bottom"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/countryLayout"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:hint="Country"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/stateLayout"
            app:layout_constraintStart_toStartOf="@id/addressLayout1"
            app:layout_constraintTop_toBottomOf="@id/addressLayout1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/countryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textSize="@dimen/H5"
                android:hint="India"
                android:layout_gravity="bottom"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/stateLayout"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_marginStart="9dp"
            android:hint="State"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/cityLayout"
            app:layout_constraintStart_toEndOf="@id/countryLayout"
            app:layout_constraintTop_toBottomOf="@id/addressLayout1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/stateText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textSize="@dimen/H5"
                android:hint="Uttar Pradesh"
                android:layout_gravity="bottom"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cityLayout"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_marginStart="9dp"
            android:hint="City"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/pinLayout"
            app:layout_constraintStart_toEndOf="@id/stateLayout"
            app:layout_constraintTop_toBottomOf="@id/addressLayout1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cityText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textSize="@dimen/H5"
                android:hint="Kanpur"
                android:layout_gravity="bottom"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pinLayout"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/subtitle"
            app:hintTextColor="@color/textHighlighted"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_marginStart="9dp"
            android:hint="Pin Code"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/c_form"
            app:layout_constraintStart_toEndOf="@id/cityLayout"
            app:layout_constraintTop_toBottomOf="@id/addressLayout1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pinText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="number"
                android:textSize="@dimen/H5"
                android:hint="208002"
                android:layout_gravity="bottom"
                android:textColorHint="@drawable/hint_selector"
                android:textColor="@color/secondary"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>