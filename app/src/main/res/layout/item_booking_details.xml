<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryBackground"
    android:backgroundTint="@color/primaryBackground"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="20dp"
    app:strokeWidth="0dp"
    app:cardElevation="2dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/booking_date_cards"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#424E61">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_marginVertical="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="29"
                android:textColor="@color/primaryBackground"
                android:textSize="@dimen/H6"
                android:fontFamily="@font/roboto_bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sep"
                android:layout_marginBottom="2dp"
                android:textColor="@color/primaryBackground"
                android:textSize="@dimen/H6"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="2dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C5CDDB"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="29"
                android:textColor="@color/primaryBackground"
                android:textSize="@dimen/H6"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sep"
                android:textColor="@color/primaryBackground"
                android:textSize="@dimen/H6"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/booking_date_cards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/confirm_text"
        android:layout_marginEnd="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Rahul Bhalerao"
                android:textSize="@dimen/H4"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deluxe Room with Breakfast"
                android:textSize="@dimen/H5"
                android:textColor="#5E687F"
                android:fontFamily="@font/roboto"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="8"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_people"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/H4"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_marginEnd="5dp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/child_svg"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/H4"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_marginEnd="5dp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/key_svg"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/H4"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_marginEnd="5dp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/child_svg"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/H4"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_marginEnd="5dp"
                    />


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/goibibo_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/confirm_text"
        app:layout_constraintStart_toStartOf="@+id/confirm_text"
        app:layout_constraintEnd_toEndOf="@+id/confirm_text"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmed"
        android:textColor="#5E687F"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>