<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.09"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.39"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.76"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92"/>
    <TextView
        android:id="@+id/channel_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/line"
        android:layout_marginHorizontal="9dp"
        android:layout_marginTop="9dp"
        android:text="OTA02486"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g1"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        android:text="Online Travel Agent"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g2"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        android:text="Booking.com"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g3"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        android:text="214"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g4"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        android:text="24%"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto_medium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g5"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        android:text="â‚¹ 2,45,851.12"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g6"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        android:text="8 Rooms, 18 Rates"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g7"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        android:text="12 Mins Ago"
        android:textSize="@dimen/H6"
        android:textColor="@color/secondary"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g8"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        android:text="Active"
        android:textSize="@dimen/H6"
        android:textColor="#0CCE2B"
        android:fontFamily="@font/roboto"/>
    <androidx.cardview.widget.CardView
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:layout_constraintStart_toEndOf="@id/item_status"
        app:layout_constraintTop_toTopOf="@id/item_status"
        app:layout_constraintBottom_toBottomOf="@id/item_status"
        android:layout_marginStart="4dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="9dp"
        app:cardBackgroundColor="#0CCE2B"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/g9"
        app:layout_constraintTop_toTopOf="@id/channel_code"
        app:layout_constraintBottom_toBottomOf="@id/channel_code"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="7dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/setting_svg2"
                android:layout_margin="6dp"
                app:layout_constraintEnd_toStartOf="@id/txt_action"/>
            <TextView
                android:id="@+id/txt_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp"
                android:textSize="@dimen/H6"
                android:text="Manage"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                app:layout_constraintStart_toEndOf="@id/img"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/channel_code"
        android:background="@color/grey30"
        android:layout_marginTop="9dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>