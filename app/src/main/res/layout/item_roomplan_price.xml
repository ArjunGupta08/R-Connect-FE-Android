<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/primaryBackground"
        android:orientation="horizontal">

        <TextView
            style="@style/subHeadingTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:paddingStart="8dp"
            android:text="Room+Breakfast" />

        <ImageView
            android:id="@+id/dropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/svg_arrow_down"
            android:layout_marginStart="25dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="10dp"
            android:gravity="center">

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />

            <TextView

                style="@style/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_weight="0.2"
                android:background="@drawable/inventory_edit_background"
                android:text="2000" />


        </LinearLayout>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ota_recycler_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        tools:listitem="@layout/item_ota_price"
        />


</androidx.constraintlayout.widget.ConstraintLayout>