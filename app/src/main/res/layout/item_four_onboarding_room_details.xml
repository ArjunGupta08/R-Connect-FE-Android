<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toStartOf="@id/ll2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Type Name"
            android:textSize="15sp"
            android:textColor="@color/secondary"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/roomTypeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kingâ€™s Suit x 25"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/ll1"
        app:layout_constraintBottom_toBottomOf="@id/ll1"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Adult"
                android:textSize="15sp"
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/maxAdult"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Child"
                android:textSize="15sp"
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/maxChild"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Occupancy"
                android:textSize="15sp"
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/maxOccupancy"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>