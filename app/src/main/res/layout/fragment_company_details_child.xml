<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.configuration.CorporateRates.AddCompany.CompanyDetailsChildFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressLayoutF1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@id/addressLayoutF2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/aT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Contract Period"
                android:textSize="@dimen/H4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:orientation="vertical"
                android:paddingHorizontal="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aT">

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pincode_layout"
                style="@style/ClickableTextInputLayoutStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/textInputLayoutHeight"
                android:layout_marginTop="10dp"
                android:hint="Effective From"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/svg_date"
                app:layout_constraintEnd_toStartOf="@id/city_layout"
                app:layout_constraintStart_toStartOf="@id/ll5"
                app:layout_constraintTop_toBottomOf="@+id/ll5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pincode_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/H5"
                    android:inputType="number"
                    android:textColor="@color/secondary"
                    android:textColorHint="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/city_layout"
                style="@style/ClickableTextInputLayoutStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/textInputLayoutHeight"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:hint="Expiration"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/svg_date"
                app:layout_constraintEnd_toEndOf="@id/ll5"
                app:layout_constraintStart_toEndOf="@id/pincode_layout"
                app:layout_constraintTop_toBottomOf="@+id/ll5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/city_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="false"
                    android:focusable="false"
                    android:clickable="true"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/H5"
                    android:inputType="text"
                    android:textColor="@color/secondary"
                    android:textColorHint="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/state_layout"
                style="@style/ClickableTextInputLayoutStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/textInputLayoutHeight"
                android:layout_marginTop="10dp"
                android:hint="Contact Type"
                app:layout_constraintEnd_toStartOf="@id/country_layout"
                app:layout_constraintStart_toStartOf="@id/pincode_layout"
                app:layout_constraintTop_toBottomOf="@+id/pincode_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/state_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="@dimen/H5"
                    android:fontFamily="@font/roboto"
                    android:inputType="text"
                    android:textColor="@color/secondary"
                    android:textColorHint="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/country_layout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/textInputLayoutHeight"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:hint="Credit Limit"
                app:layout_constraintEnd_toEndOf="@id/city_layout"
                app:layout_constraintStart_toEndOf="@id/state_layout"
                app:layout_constraintTop_toBottomOf="@+id/city_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/currency_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/H5"
                    android:inputType="text"
                    android:editable="false"
                    android:clickable="true"
                    android:focusable="false"
                    android:textColor="@color/secondary"
                    android:textColorHint="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/cT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Contract Terms"
                android:textSize="@dimen/H4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/state_layout" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="2dp"
                app:cardElevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/cT"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/cT">

                <EditText
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="Describe Contract Terms..."
                    android:maxHeight="180dp"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:textSize="@dimen/H5" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Contract Document(s)"
                android:textSize="@dimen/H4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardET" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressLayoutF2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/addressLayoutF1"
            app:layout_constraintBottom_toBottomOf="@id/addressLayoutF1"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/aT2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Contract"
                android:textSize="@dimen/H4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>