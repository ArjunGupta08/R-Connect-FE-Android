<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.singleDashboard.SingleDashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:gravity="start"
            android:subtitleTextColor="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:titleTextColor="@android:color/white"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/primaryBackground"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:strokeColor="@color/primaryBackground">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/hotel_img"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/png_hotel" />

                        <LinearLayout
                            android:id="@+id/llH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@id/hotel_img"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/hotel_img">

                            <TextView
                                android:id="@+id/hotelName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Taj Hotel"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/H5"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_marginStart="10dp"/>
                            <TextView
                                android:id="@+id/hotelLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kanpur, UP"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/H6"
                                android:fontFamily="@font/roboto"
                                android:layout_marginStart="10dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_arrow_down"
                            android:padding="10dp"
                            app:layout_constraintStart_toEndOf="@id/llH"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/primaryBackground"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:strokeColor="@color/primaryBackground">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profile"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/png_hotel" />

                        <LinearLayout
                            android:id="@+id/llP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/profile"
                            app:layout_constraintBottom_toBottomOf="@id/profile">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arjun"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/H5"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_marginStart="10dp"/>
                            <TextView
                                android:id="@+id/role"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Android"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/H6"
                                android:fontFamily="@font/roboto"
                                android:layout_marginStart="10dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_arrow_down"
                            android:padding="10dp"
                            app:layout_constraintStart_toEndOf="@id/llP"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/welcomeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary"
                android:text="Welcome to R-Connect"
                android:textSize="@dimen/H0"
                android:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Complete Suite of Hotel Solutions"
                android:textSize="@dimen/H5"
                android:fontFamily="@font/roboto"
                android:textColor="#828282"
                app:layout_constraintEnd_toEndOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_add_property"
                android:layout_marginTop="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary"
                android:text="Let’s add rooms in properties"
                android:textSize="@dimen/H2"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"/>

            <LinearLayout
                android:id="@+id/addRoomsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/svg_add_filled"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary"
                    android:text="Add Rooms"
                    android:textSize="@dimen/H2"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_bold"/>


            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/dashboardFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="340dp"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:background="@color/primaryBackground"
        app:itemTextColor="#000000">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/frame1"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:outlineSpotShadowColor="@color/secondary"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sidenav_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/svg_logo"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dashboard_card"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="40dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/primaryBackground"
                        app:cardBackgroundColor="@color/primaryBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/svg_chart"
                                android:layout_marginVertical="15dp"
                                android:layout_marginStart="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Properties"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/textColor"
                                android:layout_marginStart="10dp"
                                android:textSize="@dimen/H4" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="40dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/primaryBackground"
                        app:cardBackgroundColor="@color/primaryBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/svg_chart"
                                android:layout_marginVertical="15dp"
                                android:layout_marginStart="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rooms"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/textColor"
                                android:layout_marginStart="10dp"
                                android:textSize="@dimen/H4" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="40dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/primaryBackground"
                        app:cardBackgroundColor="@color/primaryBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/svg_chart"
                                android:layout_marginVertical="15dp"
                                android:layout_marginStart="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rates"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/textColor"
                                android:layout_marginStart="10dp"
                                android:textSize="@dimen/H4" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:src="@drawable/svg_arrow_down"
                                app:tint="@color/black"
                                android:layout_marginVertical="15dp"
                                android:layout_marginStart="50dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="40dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/primaryBackground"
                        app:cardBackgroundColor="@color/primaryBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/svg_chart"
                                android:layout_marginVertical="15dp"
                                android:layout_marginStart="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Amenities"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/textColor"
                                android:layout_marginStart="10dp"
                                android:textSize="@dimen/H4" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="40dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/primaryBackground"
                        app:cardBackgroundColor="@color/primaryBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/svg_chart"
                                android:layout_marginVertical="15dp"
                                android:layout_marginStart="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rates and Inventory"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/textColor"
                                android:layout_marginStart="10dp"
                                android:textSize="@dimen/H4" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="40dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/primaryBackground"
                        app:cardBackgroundColor="@color/primaryBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/svg_chart"
                                android:layout_marginVertical="15dp"
                                android:layout_marginStart="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Promotions"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/textColor"
                                android:layout_marginStart="10dp"
                                android:textSize="@dimen/H4" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sidenav_linear">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary"
                        android:text="Please, curate your properties through button bellow!"
                        android:textSize="@dimen/H3"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="30dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/submit"
                        android:layout_width="180dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="30dp"
                        android:backgroundTint="@color/black"
                        app:cardCornerRadius="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Configuration"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/H5"
                            android:textColor="@color/white"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/subtitle"
                        android:text="R-Connect Hotel Channel Manager"
                        android:textSize="@dimen/H3"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/subtitle"
                        android:text="© 2023 All Rights Reserved"
                        android:textSize="@dimen/H4"
                        android:fontFamily="@font/roboto"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary"
                        android:text="Made with ♥ in India"
                        android:textSize="@dimen/H2"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="20dp"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>